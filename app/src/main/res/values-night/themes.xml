<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SShop_SneakerShop" parent="Base.Theme.SShop_SneakerShop">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color for surface widgets. -->
        <item name="colorSurface">@color/dark_theme</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 2. -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- 3. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_size</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <!-- 4. -->
        <item name="android:windowSplashScreenIconBackgroundColor">
            @color/white
        </item>

        <!-- 5. -->
        <!-- 6. -->
        <item name="postSplashScreenTheme">@style/Theme.SShop_SneakerShop</item>
    </style>
</resources>