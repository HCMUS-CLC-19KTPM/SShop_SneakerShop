        <TextView
            android:id="@+id/category5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type5"
            android:textAlignment="center"
            android:textColor="@color/primary"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="355dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/banner1"
            app:civ_border_color="@color/primary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/category6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type6"
            android:textAlignment="center"
            android:textColor="@color/primary"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="358dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon7"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/banner1"
            app:civ_border_color="@color/primary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/category7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type7"
            android:textAlignment="center"
            android:textColor="@color/primary"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="355dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon8"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/banner1"
            app:civ_border_color="@color/primary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/category8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type8"
            android:textAlignment="center"
            android:textColor="@color/primary"
            tools:layout_editor_absoluteX="319dp"
            tools:layout_editor_absoluteY="355dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/newProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Newest Product"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="View All"
            android:textColor="@color/primary"
            app:layout_constraintBaseline_toBaselineOf="@+id/newProduct"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newProduct" />
    </androidx.constraintlayout.widget.ConstraintLayout>
